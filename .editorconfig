# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = crlf

[*.json]
indent_style = space
indent_size = 4

[*.ts]
indent_style = space
indent_size = 4
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
